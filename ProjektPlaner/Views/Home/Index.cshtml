@model List<ProjektPlaner.Models.CalendarDayViewModel>

@{
    ViewData["Title"] = "Kalendarz";
    var today = DateTime.Today;

    // Funkcja pomocnicza: przypisanie klasy CSS do dnia
    Func<ProjektPlaner.Models.CalendarDayViewModel, string> GetDayClass = day => day.EventName != null ? "event-day" : "";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kalendarz - @today.ToString("MMMM yyyy")</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            text-align: center;
            vertical-align: top;
            height: 100px;
            width: 14.28%;
            padding: 5px;
            font-size: 14px;
        }

        th {
            background-color: #f8f8f8;
            font-weight: bold;
        }

        .event-day {
            background-color: #cce5ff; /* Niebieskie tło */
            color: #004085;
            font-weight: bold;
        }

        .day-number {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1 class="text-center">Kalendarz na @today.ToString("MMMM yyyy")</h1>

    <table>
        <thead>
            <tr>
                <th>Pon</th>
                <th>Wt</th>
                <th>Śr</th>
                <th>Czw</th>
                <th>Pt</th>
                <th>Sob</th>
                <th>Nd</th>
            </tr>
        </thead>
        <tbody>
            @{
                int currentDayOfWeek = (int)new DateTime(today.Year, today.Month, 1).DayOfWeek;
                currentDayOfWeek = currentDayOfWeek == 0 ? 6 : currentDayOfWeek - 1;

                int totalDays = Model.Count;
                int dayIndex = 0;

                // Pierwszy tydzień
                <tr>
                    @for (int i = 0; i < 7; i++)
                    {
                        if (i < currentDayOfWeek)
                        {
                            <td></td>
                        }
                        else
                        {
                            var day = Model[dayIndex];
                            <td class="@GetDayClass(day)">
                                <div class="day-number">@day.Date.Day</div>
                                @if (day.EventName != null)
                                {
                                    <div>@day.EventName</div>
                                }
                            </td>
                            dayIndex++;
                        }
                    }
                </tr>

                // Kolejne tygodnie
                while (dayIndex < totalDays)
                {
                    <tr>
                        @for (int i = 0; i < 7; i++)
                        {
                            if (dayIndex < totalDays)
                            {
                                var day = Model[dayIndex];
                                <td class="@GetDayClass(day)">
                                    <div class="day-number">@day.Date.Day</div>
                                    @if (day.EventName != null)
                                    {
                                        <div>@day.EventName</div>
                                    }
                                </td>
                                dayIndex++;
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
